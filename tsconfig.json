{
  "compilerOptions": {
    "target": "es5",
    "outDir": "dist",
    "lib": [
      "es2017",
      "es7",
      "es6",
      "dom"
    ],
    "declaration": true,
    "esModuleInterop": true,
    "jsx": "react-jsx",
    "strict": true,
    "module": "esnext",
    "moduleResolution": "node",
    "allowJs": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "src/App.tsx",
    "src/index.tsx",
    "src/logo.svg",
    "src/react-app-env.d.ts",
    "src/reportWebVitals.ts",
    "src/Router.tsx",
    "src/setupTests.ts"
  ]
}
